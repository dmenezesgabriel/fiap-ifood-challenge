{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CleanTarget",
      "type": "shell",
      "command": "rm",
      "args": ["-rf", "target"],
      "problemMatcher": []
    },
    {
      "label": "Compile",
      "type": "shell",
      "command": "mvn",
      "args": ["clean", "package"],
      "dependsOn": ["CleanTarget"],
      "problemMatcher": []
    },
    {
      "label": "RunWAR",
      "command": "${input:runWar}",
      "dependsOn": ["Compile"],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "runWar",
      "type": "command",
      "command": "tomcat.war.run"
    }
  ]
}
